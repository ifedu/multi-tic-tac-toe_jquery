.start
    position relative
    width 100%

    .title
        font-size 24px
        font-weight bold

    .message
        color #AA2222
        font-size 10px

    .modal
        position absolute
        top 0
        width 100%

        .dialog
            background-color #fff
            border-radius 4px
            border 1px solid #ccc
            height 150px
            margin auto
            width 300px

            .question
                margin 30px 0

            .btn
                cursor pointer
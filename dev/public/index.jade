include views/_mixins/mixins
doctype html
html(lang='es')
    head
        meta(charset='utf-8')
        title Multi-Tic-Tac-Toe jQuery
        meta(
            content=''
            name='description'
        )
        //- link(
        //-     href='favicon.ico'
        //-     rel='shortcut icon'
        //- )
        link(
            href='styles/main.css'
            rel='stylesheet'
        )
    body
        .content
            .scenario.styles.view-none
                include views/_includes/scenario/main

            .start.styles
                include views/_includes/start/main

            .user.styles.view-none
                include views/_includes/user/main

        +script-min-ini()

        +script-min('js/scenario.js')
        +script-min('js/start.js')
        +script-min('js/user.js')

        +script-min-end()